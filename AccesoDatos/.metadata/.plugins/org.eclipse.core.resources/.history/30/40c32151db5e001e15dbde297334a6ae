package Ejercicio04.dao;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.SQLException;

import Ejercicio04.modelo.LineaPedido;

public class LineaPedidosDao {

	public void insertarLineasPedido(Connection conn, LineaPedido lineaPedido) throws SQLException {
		PreparedStatement stmt = null;
		try {
			stmt = conn.prepareStatement("insert into pedidos_lineas values (?,?,?,?)");
			stmt.setLong(1, lineaPedido.getIdPedido());
			stmt.setInt(2, lineaPedido.getNumeroLinea());
			stmt.setString(3, lineaPedido.getArticulo());
			stmt.setBigDecimal(4, lineaPedido.getPrecio());

		} finally {
			try {
				stmt.close();
			} catch (Exception e) {
			}
		}

	}

}
